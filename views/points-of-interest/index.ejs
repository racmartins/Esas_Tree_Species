<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pontos de Interesse</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Inclui o CSS da Navbar -->
    <link href="/css/navbar.css" rel="stylesheet" />
    <style>
      body {
        background-color: #f8f9fa; /* Cor de fundo suave para a página */
      }
      .card {
        height: 100%;
        display: flex;
        flex-direction: column;
        border: 0; /* Remove bordas do card */
        border-radius: 0.5rem; /* Arredonda os cantos do card */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Sombra subtil para destacar os cards */
      }
      .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
      }
      .btn-ver-detalhes {
        width: auto; /* Permite que o botão ocupe apenas o espaço necessário */
        margin-top: auto; /* Empurra para o fim do corpo do card */
        margin-bottom: 0.5rem; /* Espaçamento inferior */
      }
      .card-footer {
        background-color: #fff; /* Mantém o footer consistente com o corpo do card */
        border-top: 1px solid rgba(0, 0, 0, 0.125); /* Linha subtil para separar o footer do corpo */
        display: flex;
        justify-content: flex-start;
        gap: 10px;
      }
      .btn-primary,
      .btn-success,
      .btn-danger,
      .btn-info {
        border: 0; /* Estilo mais limpo para os botões */
      }
      h1 {
        color: #006400; /* Cor que combina com a homepage */
      }
    </style>
  </head>
  <body class="container py-4">
    <!-- Inclui o partial da navbar -->
    <%- include('../partials/navbar') %>

    <h1 style="color: #006400; margin-top: 80px" class="text-center mb-4">
      Pontos de Interesse
    </h1>
    <div class="d-flex justify-content-end">
      <a href="/points-of-interest/add" class="btn btn-success mb-4"
        ><i class="fa-solid fa-location-dot"></i> Adicionar Novo Ponto de
        Interesse</a
      >
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4" style="margin-top: 20px">
      <% points.forEach(function(point) { %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= point.name %></h5>
            <p class="card-text">
              Latitude: <%= point.latitude %><br />Longitude: <%=
              point.longitude %>
            </p>
            <p class="card-text"><%= point.description %></p>
            <a
              href="/points-of-interest/detail/<%= point._id %>"
              class="btn btn-info btn-ver-detalhes mt-auto"
              ><i class="fa-solid fa-eye"></i> Ver Detalhes</a
            >
          </div>
          <div class="card-footer">
            <a
              href="/points-of-interest/edit/<%= point._id %>"
              class="btn btn-primary"
              ><i class="fa-solid fa-pen-to-square"></i> Editar</a
            >
            <a
              href="/points-of-interest/delete/<%= point._id %>"
              class="btn btn-danger"
              onclick="return confirm('Tem a certeza que deseja excluir este ponto de interesse?');"
              ><i class="fa-solid fa-trash-can"></i> Excluir</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
