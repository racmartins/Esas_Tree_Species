<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pontos de Interesse</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .card-footer {
        display: flex;
        justify-content: flex-start; /* Alinha os botões à esquerda */
        gap: 10px; /* Espaço entre os botões */
        padding-top: 0.5rem; /* Espaçamento superior para separar do corpo do card */
      }

      .btn-ver-detalhes {
        width: 100%; /* Ocupa a largura total do corpo do card */
        margin-top: auto; /* Empurra para baixo dentro do corpo do card */
        margin-bottom: 0.5rem; /* Espaçamento inferior para não tocar no footer */
      }

      .card-body {
        display: flex;
        flex-direction: column; /* Organiza o conteúdo em coluna */
      }
      /* Ajusta a altura dos cards para manter a consistência */
      .card {
        height: 100%;
        display: flex;
        flex-direction: column;
      }
    </style>
  </head>
  <body class="container mt-5">
    <h1 class="mb-4">Pontos de Interesse</h1>
    <a href="/points-of-interest/add" class="btn btn-success mb-4"
      >Adicionar Novo Ponto de Interesse</a
    >
    <div class="row">
      <% points.forEach(function(point) { %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= point.name %></h5>
            <p class="card-text">
              Latitude: <%= point.latitude %><br />
              Longitude: <%= point.longitude %>
            </p>
            <p class="card-text"><%= point.description %></p>
            <a
              href="/points-of-interest/detail/<%= point._id %>"
              class="btn btn-info btn-ver-detalhes"
              >Ver Detalhes</a
            >
          </div>
          <div class="card-footer">
            <a
              href="/points-of-interest/edit/<%= point._id %>"
              class="btn btn-primary"
              >Editar</a
            >
            <a
              href="/points-of-interest/delete/<%= point._id %>"
              class="btn btn-danger"
              onclick="return confirm('Tem a certeza que deseja excluír este ponto de interesse?');"
              >Excluir</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
