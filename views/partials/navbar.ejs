<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<nav
  class="navbar navbar-expand-lg navbar-dark fixed-top navbar-scroll navbar-custom"
>
  <div class="container-fluid">
    <a class="navbar-brand ms-3" href="/">
      <img src="/img/logo.png" alt="Logo" style="height: 30px" />
      ESAS TREE
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'homepage' ? 'active' : '' %>"
            href="/"
            >Home</a
          >
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle <%= activePage.includes('gardens') ? 'active' : '' %>"
            href="#"
            id="navbarDropdownMenuLink"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Jardins
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li>
              <a class="dropdown-item" href="/gardens"
                >Ver Jardins</a
              >
            </li>
            <% if (isAdmin) { %>
            <li>
              <a class="dropdown-item" href="/gardens/manage"
                >Gerir Jardim</a
              >
            </li>
            <% } %>
          </ul>
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'species' ? 'active' : '' %>"
            href="/species"
            >Árvores</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'videos' ? 'active' : '' %>"
            href="/videos"
            >Vídeos</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'points-of-interest' ? 'active' : '' %>"
            href="/points-of-interest"
            >Pontos de Interesse</a
          >
        </li>
      </ul>
      <% if (locals.user) { %>
      <span class="navbar-text me-3">Olá, <%= locals.user.username %>!</span>
      <a href="/users/logout" class="btn btn-outline-light">Logout</a>
      <% } else { %>
      <a href="/users/login" class="btn btn-outline-light me-2">Login</a>
      <a href="/users/register" class="btn btn-outline-light">Registo</a>
      <% } %>
    </div>
  </div>
</nav>
