<% var activePage = activePage || 'default'; %>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
/>
<link rel="stylesheet" href="/css/navbar.css" />

<nav class="navbar navbar-expand-lg navbar-dark fixed-top navbar-custom">
  <div class="container-fluid">
    <a class="navbar-brand ms-3" href="/">
      <img src="/img/logo.png" alt="Logo" style="height: 30px" /> ESAS TREE
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon">
        <i class="fas fa-bars" style="color: white"></i>
        <!-- Font Awesome icon -->
      </span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav me-auto">
        <!-- Link Home -->
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'homepage' ? 'active' : '' %>"
            href="/"
          >
            <i class="fa-solid fa-house"></i> Home
          </a>
        </li>

        <!-- Link Jardins Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle <%= activePage.includes('gardens') ? 'active' : '' %>"
            href="#"
            id="navbarDropdownMenuLink"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <i class="fa-solid fa-seedling"></i> Jardins
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li>
              <a class="dropdown-item" href="/gardens">
                <i class="fa-solid fa-eye"></i> Ver Jardins
              </a>
            </li>
            <% if (isAdmin) { %>
            <li>
              <a class="dropdown-item" href="/gardens/manage">
                <i class="fa-solid fa-tools"></i> Gerir Jardim
              </a>
            </li>
            <% } %>
          </ul>
        </li>

        <!-- Link Árvores -->
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'species' ? 'active' : '' %>"
            href="/species"
          >
            <i class="fa-solid fa-tree"></i> Árvores
          </a>
        </li>

        <!-- Link Vídeos -->
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'videos' ? 'active' : '' %>"
            href="/videos"
          >
            <i class="fa-solid fa-video"></i> Vídeos
          </a>
        </li>

        <!-- Pontos de Interesse Link -->
        <li class="nav-item">
          <a
            class="nav-link <%= activePage === 'points-of-interest' ? 'active' : '' %>"
            href="/points-of-interest"
          >
            <i class="fa-solid fa-map-location-dot"></i> Pontos de Interesse
          </a>
        </li>
      </ul>

      <div class="d-flex">
        <% if (locals.user) { %>
        <span class="navbar-text me-3">Olá, <%= locals.user.username %>!</span>
        <a href="/users/logout" class="btn btn-outline-light">
          <i class="fa-solid fa-right-from-bracket"></i> Logout
        </a>
        <% } else { %>
        <a href="/users/login" class="btn btn-outline-light me-2">
          <i class="fa-solid fa-arrow-right-to-bracket"></i> Login
        </a>
        <a href="/users/register" class="btn btn-outline-light">
          <i class="fa-solid fa-user-plus"></i> Registo
        </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
