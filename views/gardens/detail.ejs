<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalhes do Jardim</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      .container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        margin-top: 2rem;
      }
      .location-coordinates {
        font-style: italic;
      }
      .tree-list {
        list-style: none;
        padding-left: 0;
      }
      .tree-list li {
        border-bottom: 1px solid #e1e1e1;
        padding: 0.5rem 0;
        margin-bottom: 0.5rem;
      }
      .tree-link {
        text-decoration: none;
        color: #007bff;
      }
      .tree-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Detalhes do Jardim: <%= garden.name %></h1>
      <p class="mb-2">
        <strong>Localização:</strong>

        <span class="location-coordinates">
          <%= garden.location.type %> [ <%=
          garden.location.coordinates.join(',') %> ]
        </span>
      </p>
      <div>
        <h4>Árvores neste Jardim:</h4>
        <% if (garden.trees && garden.trees.length) { %>
        <ul class="tree-list">
          <% garden.trees.forEach(function(tree) { %>
          <li>
            <%= tree.common_name %> (<%= tree.scientific_name %>)
            <!-- Botão para abrir o modal -->
            <button
              type="button"
              class="btn btn-outline-primary btn-sm"
              data-bs-toggle="modal"
              data-bs-target="#treeModal_<%= tree._id %>"
            >
              Ver detalhes da espécie
            </button>

            <!-- Modal -->
            <div
              class="modal fade"
              id="treeModal_<%= tree._id %>"
              tabindex="-1"
              aria-labelledby="treeModalLabel_<%= tree._id %>"
              aria-hidden="true"
            >
              <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="treeModalLabel_<%= tree._id %>">
                      <%= tree.common_name %> (<%= tree.scientific_name %>)
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <!-- Exibir imagem da árvore -->

                    <img
                      src="<%= tree.image_url ? tree.image_url : 'http://localhost:3000/img/img-padrao.jpg' %>"
                      alt="<%= tree.common_name %>"
                      onerror="this.onerror=null;this.src='http://localhost:3000/img/img-padrao.jpg';"
                      class="img-fluid mb-3"
                    />

                    <!-- Detalhes da árvore -->
                    <h6 class="mb-3">Detalhes da Árvore</h6>
                    <p><strong>Nome Comum:</strong> <%= tree.common_name %></p>
                    <p>
                      <strong>Nome Científico:</strong> <%= tree.scientific_name
                      %>
                    </p>
                    <p><strong>Descrição:</strong> <%= tree.description %></p>
                    <p><strong>Características:</strong></p>
                    <ul>
                      <li>
                        <strong>Altura:</strong> <%= tree.characteristics.altura
                        %>
                      </li>
                      <li>
                        <strong>Diâmetro:</strong> <%=
                        tree.characteristics.diâmetro %>
                      </li>
                      <li>
                        <strong>Folhagem:</strong> <%=
                        tree.characteristics.folhagem %>
                      </li>
                    </ul>
                    <p><strong>Habitat:</strong> <%= tree.habitat %></p>
                    <!-- Adicione outros detalhes conforme necessário -->
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >
                      Fechar
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </li>
          <% }); %>
        </ul>
        <% } else { %>
        <p>Não há árvores registradas neste jardim.</p>
        <% } %>
      </div>
      <a href="/gardens" class="btn btn-success">Voltar à lista de jardins</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
