<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Listagem de Jardins</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <!-- Inclui o CSS da Navbar -->
    <link href="/css/navbar.css" rel="stylesheet" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <style>
      body {
        background: #f7f7f7;
      }

      #map {
        height: 500px;
        border-radius: 0.5rem;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
      }
      .list-group-item {
        background: #fff;
        border: 1px solid rgba(0, 0, 0, 0.125);
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .list-group-item span {
        font-size: 1.25rem; /* Aumenta o tamanho da fonte */
        color: #006400; /* Cor azul escura para maior contraste */
        font-weight: 700; /* Peso da fonte um pouco mais forte para destaque */
      }

      .btn-outline-primary {
        margin-right: 0.5rem;
        border-color: #0056b3; /* Ajusta a cor da borda para combinar com os nomes dos jardins */
      }
      .btn-outline-secondary,
      .btn-outline-success,
      .btn-outline-danger {
        border-color: #343a40; /* Cor de borda mais escura para contraste */
      }
      .btn-group {
        gap: 0.5rem;
      }
      body {
        padding-top: 70px; /* Aumente o padding-top conforme necessário */
      }
      h1 {
        color: #006400; /* Cor que combina com a homepage */
      }
      .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1.25rem;
      }

      .btn-group .btn {
        margin-left: 0.5rem;
      }

      .btn-group form {
        display: inline-block;
      }

      .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 1.5;
        border-radius: 0.2rem;
      }

      .btn i {
        margin-right: 5px;
      }

      /* Hover effects for buttons */
      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }

      .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
      }

      .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
      }

      .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
      }

      @media (max-width: 768px) {
        .list-group-item span {
          font-size: 1rem; /* Reduz o tamanho da fonte em dispositivos menores */
        }
      }
    </style>
  </head>
  <body>
    <!-- Inclui o partial da navbar -->
    <%- include('../partials/navbar') %>

    <div class="content-container">
      <div class="container my-4">
        <h1 class="mb-4 text-center" style="color: #006400">Jardins</h1>
        <% if (isAdmin) { %>
        <a href="/gardens/add" class="btn btn-success mb-4"
          ><i class="fa-solid fa-seedling"></i> Adicionar Jardim</a
        >
        <% } %>
        <div id="map"></div>

        <div class="list-group">
          <% gardens.forEach(garden => { %>
          <div
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <span class="flex-grow-1"><%= garden.name %></span>
            <div class="btn-group">
              <% if (isAdmin) { %>
              <a
                href="/gardens/<%= garden._id %>/edit"
                class="btn btn-primary btn-sm"
              >
                <i class="fas fa-edit"></i> Editar
              </a>
              <% } %>

              <a
                href="/gardens/<%= garden._id %>"
                class="btn btn-success btn-sm"
              >
                <i class="fas fa-eye"></i> Visualizar Detalhes
              </a>

              <% if (isAdmin) { %>
              <form
                action="/gardens/<%= garden._id %>/delete"
                method="post"
                onsubmit="return confirm('Tem a certeza que deseja excluir o jardim?');"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash-alt"></i> Excluir
                </button>
              </form>
              <% } %>

              <a
                href="/gardens/<%= garden._id %>/panoramic-garden"
                class="btn btn-secondary btn-sm"
              >
                <i class="fas fa-image"></i> Vista Panorâmica
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var map = L.map('map').setView([0, 0], 2);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 18,
        }).addTo(map);

        var bounds = L.latLngBounds();
        <% gardens.forEach(function(garden) { %>
            var coordinates = [<%= garden.location.coordinates[1] %>, <%= garden.location.coordinates[0] %>];
            var marker = L.marker(coordinates).addTo(map)
                .bindPopup("<%= garden.name %>");
            bounds.extend(marker.getLatLng());
        <% }); %>
        if (bounds.isValid()) {
            map.fitBounds(bounds);
        }
      });
    </script>
  </body>
</html>
