<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vídeos sobre a Flora</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/navbar.css" rel="stylesheet" />
    <style>
      body {
        background-color: #f0f2f5;
        margin-top: 4rem;
      }

      .video-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
      }

      .video-card:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .video-thumbnail {
        height: 180px;
        object-fit: cover;
      }

      .video-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem;
      }

      .video-title {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
      }

      .video-description {
        color: #666;
        font-size: 0.9rem;
      }

      .action-buttons a {
        margin-right: 0.5rem;
      }

      .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
      }
      h1 {
        color: #006400; /* Cor que combina com a homepage */
      }
      body {
        padding-top: 80px; /* Aumente o padding-top conforme necessário */
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Inclui o partial da navbar -->
      <%- include('../partials/navbar') %>

      <div class="page-header">
        <h1 style="color: #006400; margin-top: 70px">Vídeos sobre a Flora</h1>
        <a href="/videos/add" class="btn btn-success"
          ><i class="fa-solid fa-plus"></i> Adicionar Novo Vídeo</a
        >
      </div>

      <div class="row">
        <% videos.forEach(function(video) { %>
        <div class="col-md-4 mb-4">
          <div class="card video-card h-100">
            <img
              src="<%= video.thumbnail_url %>"
              class="card-img-top video-thumbnail"
              alt="<%= video.title %>"
            />
            <div class="card-body">
              <h5 class="video-title"><%= video.title %></h5>
              <p class="video-description"><%= video.description %></p>
            </div>
            <div class="card-footer bg-white border-top-0">
              <div class="action-buttons">
                <a
                  href="<%= video.video_url %>"
                  class="btn btn-sm btn-outline-primary"
                  target="_blank"
                  ><i class="fa-solid fa-play-circle"></i> Assistir</a
                >
                <a
                  href="/videos/edit/<%= video._id %>"
                  class="btn btn-sm btn-outline-secondary"
                  ><i class="fa-solid fa-pen-to-square"></i> Editar</a
                >
                <button
                  onclick="confirmDelete('<%= video._id %>')"
                  class="btn btn-sm btn-outline-danger"
                >
                  <i class="fa-solid fa-trash-can"></i>

                  Excluir
                </button>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function confirmDelete(videoId) {
        if (confirm("Tem certeza que deseja excluir este vídeo?")) {
          window.location.href = `/videos/delete/${videoId}`;
        }
      }
    </script>
  </body>
</html>
