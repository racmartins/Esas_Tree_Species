<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vídeos sobre a Flora</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Estilos personalizados */
      .card {
        transition: transform 0.2s; /* Animação para hover */
      }
      .card:hover {
        transform: scale(1.03); /* Efeito de zoom ao passar o mouse */
      }
      .btn-warning,
      .btn-danger {
        margin-top: 0.5rem; /* Espaçamento superior para os botões Editar e Excluir */
      }
    </style>
  </head>
  <body class="container mt-5">
    <h1 class="mb-4">Vídeos sobre a Flora</h1>
    <a href="/videos/add" class="btn btn-success mb-4">Adicionar Novo Vídeo</a>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% videos.forEach(function(video) { %>
      <div class="col">
        <div class="card h-100">
          <img
            src="<%= video.thumbnail_url %>"
            class="card-img-top"
            alt="Thumbnail do vídeo"
          />
          <!-- Exemplo de thumbnail -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= video.title %></h5>
            <p class="card-text"><%= video.description %></p>
            <div class="mt-auto">
              <a
                href="<%= video.video_url %>"
                class="btn btn-primary"
                target="_blank"
                >Assistir Vídeo</a
              >
              <a href="/videos/edit/<%= video._id %>" class="btn btn-warning"
                >Editar</a
              >
              <a
                href="/videos/delete/<%= video._id %>"
                class="btn btn-danger"
                onclick="return confirm('Tem a certeza que deseja excluír este vídeo?');"
                >Excluir</a
              >
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
