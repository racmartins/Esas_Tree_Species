<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resultados da Identificação da Planta</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      h1 {
        color: #006400; /* Cor que combina com a homepage */
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container py-5">
      <h1 class="text-center mb-4">Resultados da Identificação da Planta</h1>
      <% if (results && results.results && results.results.length > 0) { %> <%
      results.results.forEach((result, index) => { %>
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title">Resultado <%= index + 1 %> :</h2>
          <p class="card-text">
            <strong>Nome Científico:</strong> <%=
            result.species.scientificNameWithoutAuthor %> <%=
            result.species.scientificNameAuthorship %>
          </p>
          <p class="card-text">
            <strong>Família:</strong> <%=
            result.species.family.scientificNameWithoutAuthor %> <%=
            result.species.family.scientificNameAuthorship %>
          </p>
          <p class="card-text">
            <strong>Género:</strong> <%=
            result.species.genus.scientificNameWithoutAuthor %> <%=
            result.species.genus.scientificNameAuthorship %>
          </p>
          <% if (result.species.commonNames && result.species.commonNames.length
          > 0) { %>
          <p class="card-text"><strong>Nomes Comuns:</strong></p>
          <ul class="list-unstyled">
            <% result.species.commonNames.forEach(commonName => { %>
            <li><%= commonName %></li>
            <% }) %>
          </ul>
          <% } else { %>
          <p class="card-text">Nomes Comuns: Não disponíveis</p>
          <% } %>
        </div>
      </div>
      <% }); %> <% } else { %>
      <p class="text-center">Nenhum resultado encontrado.</p>
      <% } %>
      <div class="d-flex justify-content-center">
        <a href="/plants/identify-plant" class="btn btn-outline-secondary me-2"
          >Tente de novo</a
        >
        <a href="/species" class="btn btn-outline-success"
          >Retornar à lista de espécies</a
        >
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
