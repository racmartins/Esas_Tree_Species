<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Identificar Planta</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        padding-top: 50px;
      }
      .container {
        max-width: 500px;
        margin: auto;
      }
      h2 {
        color: #006400; /* Cor que combina com a homepage */
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2 class="text-center mb-4">Identifique a sua Planta</h2>
      <form
        action="/plants/identify-plant"
        method="post"
        enctype="multipart/form-data"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="plantImage" class="form-label"
            ><em>Selecione uma imagem</em></label
          >
          <input
            class="form-control"
            type="file"
            id="plantImage"
            name="plantImage"
            accept="image/*"
            required
          />
          <div class="invalid-feedback">
            Por favor, selecione uma imagem válida.
          </div>
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-outline-success">
            Identificar Planta
          </button>
          <button
            type="button"
            class="btn btn-outline-secondary"
            onclick="window.history.back();"
          >
            Cancelar
          </button>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Exemplo de JavaScript para desativar o envio de formulários se houver campos inválidos
      (function () {
        "use strict";
        var forms = document.querySelectorAll(".needs-validation");
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
