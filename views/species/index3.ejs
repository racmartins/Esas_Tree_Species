<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listagem de Espécies</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f0f2f5;
      }
      .btn-outline-custom {
        color: white;
        border-color: #006400;
      }
      .btn-outline-custom:hover {
        color: #006400;
        background-color: white;
        border-color: #006400;
      }
      .btn-group .btn {
        margin: 0 2px;
      }
      .btn-edit,
      .btn-details,
      .btn-delete,
      .btn-panoramic {
        padding: 0.375rem 0.75rem;
      }
      .btn-edit {
        color: #ffc107;
      }
      .btn-details {
        color: #198754;
      }
      .btn-delete {
        color: #dc3545;
      }
      .btn-panoramic {
        color: #0dcaf0;
      }
      .btn-edit:hover,
      .btn-details:hover,
      .btn-delete:hover,
      .btn-panoramic:hover {
        color: white;
      }
      .card-header {
        background-color: #006400;
        color: white;
      }
    </style>
  </head>
  <body>
    <!-- Navbar Here -->

    <div class="container py-4">
      <h1 class="text-center mb-4">Espécies Arbóreas</h1>
      <div class="row">
        <% species.forEach(specie => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-header">
              <%= specie.common_name %> (<%= specie.scientific_name %>)
            </div>
            <img src="<%= specie.image_url %>" class="card-img-top" alt="..." />
            <div class="card-body">
              <p class="card-text"><%= specie.description %></p>
            </div>
            <div class="card-footer bg-transparent">
              <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-outline-custom btn-edit">
                  <i class="fas fa-edit"></i> Editar
                </button>
                <button
                  type="button"
                  class="btn btn-outline-custom btn-details"
                >
                  <i class="fas fa-eye"></i> Detalhes
                </button>
                <button type="button" class="btn btn-outline-custom btn-delete">
                  <i class="fas fa-trash-alt"></i> Excluir
                </button>
                <button
                  type="button"
                  class="btn btn-outline-custom btn-panoramic"
                >
                  <i class="fas fa-image"></i> Panorâmica
                </button>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
